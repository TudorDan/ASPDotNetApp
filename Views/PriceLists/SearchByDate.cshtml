@model IEnumerable<PriceListViewModel>
@{
    ViewData["Title"] = "Valid Prices by Date";
}

<div class="container p-3">
    <div class="row pt-4">
        <h2 class="text-primary">Valid Prices for @ViewBag.SearchDate.ToString("MMMM dd, yyyy")</h2>
    </div>
    <br /><br />

    <table class="table table-active">
        <thead>
            <tr>
                <th>Article Name</th>
                <th>Purchase Price</th>
                <th>Markup Percentage</th>
                <th>Valid Start Date</th>
                <th>Valid End Date</th>
                <th>Retail Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var priceListVM in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="PriceLists" asp-action="Index" asp-route-id="@priceListVM.ArticleId"
                           class="btn btn-info" style="width:90%">
                            <i class="bi bi-info-circle"></i> @priceListVM.ArticleName
                        </a>
                    </td>
                    <td>@priceListVM.PurchasePrice</td>
                    <td>@priceListVM.MarkupPercentage</td>
                    <td>@priceListVM.ValidStartDate.ToString("MMMM dd, yyyy")</td>
                    <td>@priceListVM.ValidEndDate.ToString("MMMM dd, yyyy")</td>
                    <td>@priceListVM.RetailPrice</td>
                </tr>
            }
        </tbody>
    </table>
</div>