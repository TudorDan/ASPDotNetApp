@model Article

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Article</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Code"></label>
            <input asp-for="Code" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="VATPercentage"></label>
            <input asp-for="VATPercentage" type="number" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="PurchasePrice"></label>
            <input asp-for="PurchasePrice" type="number" disabled class="form-control" />
        <div class="mb-3">
            <label asp-for="RetailPrice"></label>
            <input asp-for="RetailPrice" type="number" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Status"></label>
            <input asp-for="Status" type="checkbox" disabled class="form-check-input" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="Articles" asp-action="Index" class="btn btn-info" style="width:150px">Back to List</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}